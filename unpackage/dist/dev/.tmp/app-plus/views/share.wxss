.sharePanel{
	width: 100%;
	height: 310rpx;
	display: block;
}
.sharePanel > view{
	width: 25%;
	padding: 15rpx 0;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	float: left;
}
.sharePanel > view > view{
	width: 80rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 10rpx;
}
.weixinBg{
	background: #30ce39;
}
.qqBg{
	background: #2ab6fa;
}
.linkBg{
	background: #45ccd0;
}
.moreBg{
	background: #f5c340;
}
.sharePanel > view > view ._i{
	color: #fff;
	font-size: 44rpx;
}
.sharePanel ._span{
	font-size: 26rpx;
	margin-top: 10rpx;
}
.shareModel{
    position: fixed;
    z-index: 100;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0,0,0,.3);
}
.shareBox{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fafafa;
    z-index: 101;
    -webkit-transition: all 0.3s;
    -o-transition: all 0.3s;
    transition: all 0.3s;
    -webkit-transform: translateY(0);
        -ms-transform: translateY(0);
            transform: translateY(0);
}
.shareCancle{
	width: 100%;
    line-height: 80rpx;
    background: white;
    text-align: center;
    letter-spacing: 20rpx;
    font-size: 38rpx;
    color: #2c9dfe;
    margin-bottom: 0;
}
.showShareBox{
	-webkit-transform: translateY(100%);
	    -ms-transform: translateY(100%);
	        transform: translateY(100%);
}
